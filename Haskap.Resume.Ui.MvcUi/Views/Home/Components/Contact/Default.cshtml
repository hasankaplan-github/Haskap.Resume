<section class="resume-section" id="contact">
    <div class="resume-section-content">
        <h2 class="mb-5">İLETİŞİM</h2>
        <form asp-controller="Home" asp-action="SendMessage">
            <div class="form-group">
                <label></label>
                <input name="senderName" type="text" class="form-control" placeholder="İsim" required />
            </div>
            <div class="form-group">
                <label></label>
                <input name="senderEmailAddress" type="email" class="form-control" placeholder="Eposta" required />
            </div>
            <div class="form-group">
                <label></label>
                <input name="subject" type="text" class="form-control" placeholder="Konu" required />
            </div>
            <div class="form-group">
                <label></label>
                <textarea name="body" id="Body" cols="30" rows="7" class="form-control" placeholder="Mesaj" required></textarea>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" class="btn btn-primary float-end" value="GÖNDER" />
            </div>
        </form>

